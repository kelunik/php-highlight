#!/usr/bin/env php
<?php

use Kelunik\Highlight\AnsiFormatter;

if ($argc < 2) {
    echo "Usage: highlight /path/to/file.php";
    exit(1);
}

require __DIR__ . "/../vendor/autoload.php";

$hl = new Kelunik\Highlight\Highlighter(new AnsiFormatter);
print $hl->highlight(file_get_contents($argv[1]));